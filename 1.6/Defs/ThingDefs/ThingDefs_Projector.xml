<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>PE_Projector</defName>
    <label>projector</label>
    <description>A classroom projector that can be linked to a learning board to improve learning effectiveness.</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/Projector</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.2</fillPercent>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>1200</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Mass>5</Mass>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <building>
      <isEdifice>false</isEdifice>
    </building>
    <designationCategory>PE_Development</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <tickerType>Normal</tickerType>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>75</basePowerConsumption>
      </li>
      <li Class="CompProperties_Facility">
        <compClass>CompFacility</compClass>
        <maxSimultaneous>1</maxSimultaneous>
      </li>
      <li Class="ProgressionEducation.CompProperties_Projector">
        <learningBonus>0.1</learningBonus>
      </li>
    </comps>
  </ThingDef>
</Defs>