    <ThingDef ParentName="BuildingBase">
        <defName>PE_StoneSchoolDesk</defName>
        <label>rough school desk</label>
        <description>todo.</description>
        <graphicData>
            <texPath>Buildings/LessonDesks/LessonSlab</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(4,3)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <staticSunShadowHeight>0.15</staticSunShadowHeight>
        <altitudeLayer>Building</altitudeLayer>
        <uiIconScale>0.8</uiIconScale>
        <designationCategory>Ferny_Education</designationCategory>
        <uiOrder>9</uiOrder>
        <minifiedDef>MinifiedThing</minifiedDef>
        <interactionCellIcon>DiningChair</interactionCellIcon>
        <interactionCellOffset>(0,0,1)</interactionCellOffset>
        <hasInteractionCell>true</hasInteractionCell>
        <thingCategories>
            <li>BuildingsFurniture</li>
        </thingCategories>
        <passability>PassThroughOnly</passability>
        <canOverlapZones>false</canOverlapZones>
        <pathCost>50</pathCost>
        <fillPercent>0.5</fillPercent>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToBuild>500</WorkToBuild>
            <Mass>10</Mass>
            <Flammability>0</Flammability>
            <Beauty>-5</Beauty>
        </statBases>
        <size>(2,1)</size>
        <researchPrerequisites>
            <li>Stonecutting</li>
        </researchPrerequisites>
        <costStuffCount>40</costStuffCount>
        <stuffCategories>
            <li>Stony</li>
        </stuffCategories>
        <placeWorkers>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <building>
            <paintable>false</paintable>
        </building>
        <comps>
            <li Class="ProgressionEducation.CompProperties_SchoolDesk">
                <speedModifier>0.6</speedModifier>
            </li>
        </comps>
    </ThingDef>

