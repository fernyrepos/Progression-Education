<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>PE_StrikingBoard</defName>
        <label>striking board</label>
        <description>A plank embedded in the ground, with a dampening rope wrapped around its top half capable of taking direct blows. Can be used to train melee skills in classes.</description>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToBuild>2500</WorkToBuild>
            <Mass>25</Mass>
            <Flammability>0.7</Flammability>
            <Beauty>-3</Beauty>
        </statBases>
        <uiIconOffset>(0, 0.1)</uiIconOffset>
        <uiIconScale>1.2</uiIconScale>
        <costList>
            <WoodLog>1</WoodLog>
            <Cloth>5</Cloth>
        </costList>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>42</pathCost>
        <fillPercent>0.4</fillPercent>
        <rotatable>true</rotatable>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,1)</interactionCellOffset>
        <researchPrerequisites>
            <li>Stonecutting</li>
        </researchPrerequisites>
        <designationCategory>Ferny_Education</designationCategory>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <graphicData>
            <texPath>Buildings/Tools/StrikingBoard</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(1,1)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <defName>PE_Cadaver</defName>
        <label>cadaver dummy</label>
        <description>A medical-grade cloth recreation of a baseliner, down to the individual muscles. Students can train their medical skills by performing practice surgeries on it.</description>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToBuild>30000</WorkToBuild>
            <Mass>25</Mass>
            <Flammability>0.7</Flammability>
            <Beauty>-3</Beauty>
        </statBases>
        <size>(1,2)</size>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>42</pathCost>
        <costList>
            <WoodLog>30</WoodLog>
            <Steel>8</Steel>
            <Cloth>100</Cloth>
        </costList>
        <uiIconOffset>(0, 0.15)</uiIconOffset>
        <uiIconScale>1.35</uiIconScale>
        <fillPercent>0.4</fillPercent>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <researchPrerequisites>
            <li>Ferny_IndustrialEducation</li>
        </researchPrerequisites>
        <designationCategory>Ferny_Education</designationCategory>
        <!-- <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers> -->
        <graphicData>
            <texPath>Buildings/Tools/Cadaver</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(2,2)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <defName>PE_ShootingTarget</defName>
        <label>firearm station</label>
        <description>A metallic target equipped with a practice rifle. Students can fire at the target to train their shooting skills.</description>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToBuild>1000</WorkToBuild>
            <Mass>15</Mass>
            <Flammability>1.0</Flammability>
            <Beauty>-5</Beauty>
        </statBases>
        <uiIconScale>3.5</uiIconScale>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <researchPrerequisites>
            <li>Ferny_IndustrialEducation</li>
        </researchPrerequisites>
        <costStuffCount>50</costStuffCount>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>42</pathCost>
        <fillPercent>0.4</fillPercent>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-2)</interactionCellOffset>
        <designationCategory>Ferny_Education</designationCategory>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <comps>
            <li Class="ProgressionEducation.CompProperties_WeaponTrainingBench">
                <!-- <weaponDef>PE_Gun_AssaultRifleTraining</weaponDef> -->
                <weaponDef>PE_PracticeShortBow</weaponDef>
            </li>
        </comps>
        <size>(1,5)</size>
        <graphicData>
            <texPath>Buildings/Tools/ShootingTarget</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(1,1)</drawSize>
            <drawOffsetNorth>(0, 0, 2)</drawOffsetNorth>
            <drawOffsetSouth>(0, 0, -2)</drawOffsetSouth>
            <drawOffsetEast>(2, 0, 0)</drawOffsetEast>
            <drawOffsetWest>(-2, 0, 0)</drawOffsetWest>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
    </ThingDef>

</Defs>