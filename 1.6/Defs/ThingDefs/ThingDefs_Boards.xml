<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>PE_LessonStone</defName>
        <label>lesson stone</label>
        <description>A bumpy surface for teaching basic lessons at slow speeds. Placing a board marks the area as a classroom, which can then be assigned classes.</description>
        <graphicData>
            <texPath>Buildings/LessonBoards/Lessonstone</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>Cutout</shaderType>
            <drawSize>1.9</drawSize>
            <damageData>
                <rectN>(0.1, 0.3, 1.8, 0.5)</rectN>
                <rectS>(0.1, 0.3, 1.8, 0.5)</rectS>
                <rectE>(0.45, 0, 0.2, 1)</rectE>
                <rectW>(0.55, 0, 0.2, 1)</rectW>
            </damageData>
            <shadowData>
                <volume>(2, 0.5, 0.2)</volume>
            </shadowData>
        </graphicData>
        <descriptionHyperlinks>
            <ThingDef>PE_StoneSchoolDesk</ThingDef>
        </descriptionHyperlinks>
        <uiOrder>1</uiOrder>
        <altitudeLayer>Building</altitudeLayer>
        <designationCategory>Ferny_Education</designationCategory>
        <minifiedDef>MinifiedThing</minifiedDef>
        <defaultPlacingRot>South</defaultPlacingRot>
        <thingCategories>
            <li>BuildingsFurniture</li>
        </thingCategories>
        <passability>PassThroughOnly</passability>
        <canOverlapZones>false</canOverlapZones>
        <pathCost>50</pathCost>
        <fillPercent>0.5</fillPercent>
        <statBases>
            <MaxHitPoints>80</MaxHitPoints>
            <WorkToBuild>700</WorkToBuild>
            <Mass>10</Mass>
            <Flammability>0</Flammability>
            <Beauty>-3</Beauty>
        </statBases>
        <researchPrerequisites>
            <li>Stonecutting</li>
        </researchPrerequisites>
        <size>(2,1)</size>
        <costStuffCount>20</costStuffCount>
        <stuffCategories>
            <li>Stony</li>
        </stuffCategories>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <building>
            <paintable>false</paintable>
        </building>
        <comps>
            <li Class="ProgressionEducation.CompProperties_LearningBoard">
                <qualityBonuses>
                    <Awful>0.8</Awful>
                    <Poor>0.9</Poor>
                    <Normal>1</Normal>
                    <Good>1.1</Good>
                    <Excellent>1.2</Excellent>
                    <Masterwork>1.3</Masterwork>
                    <Legendary>1.5</Legendary>
                </qualityBonuses>
            </li>
        </comps>
    </ThingDef>

