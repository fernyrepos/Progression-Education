<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="SchoolDesk"]/designationCategory</xpath>
    <value>
      <designationCategory>Ferny_Education</designationCategory>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="Blackboard"]/designationCategory</xpath>
    <value>
      <designationCategory>Ferny_Education</designationCategory>
    </value>
  </Operation>


  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="Blackboard"]/label</xpath>
    <value>
      <label>blackboard (1x2)</label>
    </value>
  </Operation>


  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="SchoolDesk"]/description</xpath>
    <value>
      <description>A desk where students can learn in general classes. Functions at a good speed for most lessons.</description>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="Blackboard"]/description</xpath>
    <value>
      <description>A flat surface for writing on with chalk at moderate speed. Placing a board marks the area as a classroom, which can then be assigned classes.</description>
    </value>
  </Operation>


  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="Blackboard"]</xpath>
    <value>
      <uiOrder>2</uiOrder>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="SchoolDesk"]</xpath>
    <value>
      <uiOrder>7</uiOrder>
    </value>
  </Operation>


  <Operation Class="PatchOperationConditional">
 <xpath>/Defs/ThingDef[defName="SchoolDesk"]/researchPrerequisites</xpath>
    <match Class="PatchOperationReplace">
 <xpath>/Defs/ThingDef[defName="SchoolDesk"]/researchPrerequisites</xpath>
      <value>
        <researchPrerequisites>
            <li>Ferny_NeolithicEducation</li>
        </researchPrerequisites>
      </value>
    </match>
    <nomatch Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="SchoolDesk"]</xpath>
      <value>
        <researchPrerequisites>
            <li>Ferny_NeolithicEducation</li>
        </researchPrerequisites>
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationConditional">
 <xpath>/Defs/ThingDef[defName="Blackboard"]/researchPrerequisites</xpath>
    <match Class="PatchOperationReplace">
 <xpath>/Defs/ThingDef[defName="Blackboard"]/researchPrerequisites</xpath>
      <value>
        <researchPrerequisites>
            <li>Ferny_NeolithicEducation</li>
        </researchPrerequisites>
      </value>
    </match>
    <nomatch Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="Blackboard"]</xpath>
      <value>
        <researchPrerequisites>
            <li>Ferny_NeolithicEducation</li>
        </researchPrerequisites>
      </value>
    </nomatch>
  </Operation>


  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="Blackboard"]/graphicData/texPath</xpath>
    <value>
      <texPath>Buildings/LessonBoards/Blackboard</texPath>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="SchoolDesk"]/graphicData/texPath</xpath>
    <value>
      <texPath>Buildings/LessonDesks/LessonDesk</texPath>
    </value>
  </Operation>

</Patch>