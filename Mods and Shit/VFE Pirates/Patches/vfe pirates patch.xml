<?xml version="1.0" encoding="utf-8" ?>
<Patch>          

<!-- VFE PIRATES PATCHES -->

<!-- SCENARIOS -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ScenarioDef[defName="VFEP_LowOrbitCrash"]/scenario/parts</xpath>
    <value>
			<li Class="ProgressionEducation.ScenPart_ForcedProficiencyTrait">
				<def>PE_ForcedProficiencyTrait</def>
				<chance>1</chance>
				<context>PlayerStarter</context>
				<trait>PE_HighTechProficiency</trait>
			</li>
    </value>
  </Operation>

<!-- GEAR -->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="VFEP_WarcasketMeleeWeapon_CombatKnife"]</xpath>
    <value>
      <li Class="ProgressionEducation.ItemProficiencyRequirement">
        <requiredProficiency>PE_LowTechProficiency</requiredProficiency>
      </li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="VFEP_WarcasketMeleeWeapon_Broadsword"]</xpath>
    <value>
      <li Class="ProgressionEducation.ItemProficiencyRequirement">
        <requiredProficiency>PE_LowTechProficiency</requiredProficiency>
      </li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="VFEP_WarcasketMeleeWeapon_GravityHammer"]</xpath>
    <value>
      <li Class="ProgressionEducation.ItemProficiencyRequirement">
        <requiredProficiency>PE_LowTechProficiency</requiredProficiency>
      </li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="VFEP_WarcasketMeleeWeapon_PlasmaSword"]</xpath>
    <value>
      <li Class="ProgressionEducation.ItemProficiencyRequirement">
        <requiredProficiency>PE_LowTechProficiency</requiredProficiency>
      </li>
    </value>
  </Operation>


</Patch>